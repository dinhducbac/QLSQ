@model QLSQ.ViewModel.Catalogs.ChucVu.ChucVuUpdateRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark">Chỉnh sửa thông tin chức vụ</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with minimal features & hover style</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">


                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Edit">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="IDBP" class="control-label"></label>
                                        <select asp-for="IDBP" class="form-control" asp-items="@(new SelectList(Model.boPhanViewModels,"IDBP","TenBP"))"></select>
                                        <span asp-validation-for="IDBP" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="IDCV" class="control-label"></label>
                                        <input asp-for="IDCV" class="form-control" readonly />
                                        <span asp-validation-for="IDCV" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TenCV" class="control-label"></label>
                                        <input asp-for="TenCV" class="form-control" />
                                        <span asp-validation-for="TenCV" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
