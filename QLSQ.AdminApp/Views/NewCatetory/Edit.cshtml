@model QLSQ.ViewModel.Catalogs.NewCatetory.NewCatetoryUpdateRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark">Chỉnh sửa laoij tin tức</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with minimal features & hover style</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Edit" onsubmit="return StopSubmit(event)">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="NewCatetoryID" class="control-label"></label>
                                        <input asp-for="NewCatetoryID" readonly class="form-control" />
                                        <span asp-validation-for="NewCatetoryID" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NewCatetoryName" class="control-label"></label>
                                        <input id="NewCatetoryName" asp-for="NewCatetoryName" class="form-control" />
                                        <span asp-validation-for="NewCatetoryName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
@section Scripts{
    <script type="text/javascript">
        function StopSubmit(e) {
            if ($("#NewCatetoryName").val() == "") {
                alert("Bạn phải nhâp tên thể loại");
                e.preventDefault(e);
                return false;
            }
            return true;
        }
    </script>
}


