                            <div class="border-bottom pt-1 pb-3">
                                <h5 class="font-weight-600 mt-0 mb-0">
                                    <a asp-controller="DetailNew" asp-action="Index" asp-route-NewID="@tuyensinhnew.NewID" class="font-weight-bold text-dark">@tuyensinhnew.NewName</a> 
