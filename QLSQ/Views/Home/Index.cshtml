<div class="world-news">
    <div class="row">
        <div class="col-sm-12">
            <div class="d-flex position-relative  float-left">
                <h3 class="section-title">Xem nhiều nhất</h3>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var mostviewnew in Model.MostViewNews)
        {
            <div class="col-lg-3 col-sm-6 grid-margin mb-5 mb-sm-2">
                <div class="position-relative image-hover">
                    <img src="@Configuration["BaseAddress"]/new-image/@mostviewnew.ImagePath"
                         class="img-fluid"
                         alt="" />
                    <span class="thumb-title">@mostviewnew.NewCatetoryName</span>
                </div>
                <h5 class="font-weight-bold mt-3">
                    <a asp-controller="DetailNew" asp-action="Index" asp-route-NewID="@mostviewnew.NewID" class="text-dark">@mostviewnew.NewName</a>                
                </h5>
                <p class="fs-15 font-weight-normal">
                    @Html.Raw(mostviewnew.NewContent.Substring(0, 55))
                </p>
                <a asp-controller="DetailNew" asp-action="Index" asp-route-NewID="@mostviewnew.NewID" class="font-weight-bold text-dark pt-2">Xem thêm</a>
            </div>
        }
    </div>
</div>
<div class="editors-news">
    <div class="row">
        <div class="col-lg-5">
            <div class="d-flex position-relative float-left">
                <h3 class="section-title">Khoa học và công nghệ</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6  mb-5 mb-sm-2">
            <div class="position-relative image-hover">
                <img src="@Configuration["BaseAddress"]/new-image/@Model.KHCNNewInInDex[0].ImagePath"
                     class="img-fluid"
                     alt="world-news" />
                <span class="thumb-title">@Model.KHCNNewInInDex[0].NewCatetoryName</span>
            </div>
            <h1 class="font-weight-600 mt-3">
                <a asp-controller="DetailNew" asp-action="Index" asp-route-NewID="@Model.KHCNNewInInDex[0].NewID" class="text-dark">@Model.KHCNNewInInDex[0].NewName</a>            
            </h1>
            <p class="fs-15 font-weight-normal">
                @Html.Raw(Model.KHCNNewInInDex[0].NewContent.Substring(0, 55)) ...
            </p>
        </div>
        <div class="col-lg-6  mb-5 mb-sm-2">
            <div class="row">
                @for (int i = 1; i < Model.KHCNNewInInDex.Count(); i++)
                {
                    <div class="col-sm-6  mb-5 mb-sm-2">
                        <div class="position-relative image-hover">
                            <img src="@Configuration["BaseAddress"]/new-image/@Model.KHCNNewInInDex[i].ImagePath"
                                 class="img-fluid"
                                 alt="world-news" />
                            <span class="thumb-title">@Model.KHCNNewInInDex[i].NewCatetoryName</span>
                        </div>
                        <h5 class="font-weight-600 mt-3">
                            <a asp-controller="DetailNew" asp-action="Index" asp-route-NewID="@Model.KHCNNewInInDex[i].NewID" class="text-dark">@Model.KHCNNewInInDex[i].NewName</a>    
                        </h5>
                        <p class="fs-15 font-weight-normal">
                            @Html.Raw(Model.KHCNNewInInDex[i].NewContent.Substring(0, 55)) ...
                        </p>
                    </div>
                }
            </div>         
        </div>
    </div>
</div>
